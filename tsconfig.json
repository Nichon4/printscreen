{
    "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "checkJs": false,
      "declaration": true,
      "outDir": "./build/",
      "sourceMap": false,
      "noImplicitAny": true,
      "lib": ["esnext", "dom", "dom.iterable"],
      "module": "commonjs",
      "target": "ES2015",
      "preserveSymlinks": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules/", "build/"]
}

  